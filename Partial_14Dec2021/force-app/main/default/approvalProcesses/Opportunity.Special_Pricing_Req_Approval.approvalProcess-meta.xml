<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Approval_Status__c</field>
        <field>CloseDate</field>
        <field>Average_Discount__c</field>
        <field>Priority__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>TL Approval</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Average_Discount__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>User_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Average_Discount__c</field>
                <operation>greaterThan</operation>
                <value>6</value>
            </criteriaItems>
        </entryCriteria>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Ashirvad_Email_Template/Additional_Discount_Request_Template</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Mail_to_Depots</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Approve_It</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>cc_Mail_to_Accounts</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_cc</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_Notification_to_Owner_who_is_requested</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Spl_Pricing_Req_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Notification_to_Owner_who_is_requested_after_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Spl_Pricing_Req_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Depot_eMail_Id_Update_1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Depot_eMail_Id_Update_2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Initial_Approver_Email_id</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Special_Pricing_Req_Field</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Approved_by_Init</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Special Pricing Req Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Intial_Project_Approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
