<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Average_Discount_Provided__c</field>
        <field>Project_Number__c</field>
        <field>Project__c</field>
        <field>Remarks__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Current_approver_step_1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>if discount is less than 7.5 then it will go to Project owner manager</description>
        <entryCriteria>
            <criteriaItems>
                <field>Unique_SPR__c.Average_Discount_Provided__c</field>
                <operation>lessOrEqual</operation>
                <value>7.5</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>current_rejector</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Current_approver_step_2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>L2_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Goes to Project owner Project Approver if discount is greater than 7.5</description>
        <entryCriteria>
            <criteriaItems>
                <field>Unique_SPR__c.Average_Discount_Provided__c</field>
                <operation>greaterThan</operation>
                <value>7.5</value>
            </criteriaItems>
        </entryCriteria>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>current_rejector2</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This approval process is used in the new structure.</description>
    <emailTemplate>Ashirvad_Email_Template/Unique_SPR_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Appr_RejDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>approval_date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Mail_to_record_owner_when_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Appr_RejDate2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_to_owner_if_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_on_submission</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Send for SPR Revamp</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Intial_Project_Approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
