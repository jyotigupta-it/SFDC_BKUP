<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Project_Owner_Developer_Name__c</field>
        <field>Order_Max_Percentage__c</field>
        <field>Products__c</field>
        <field>Contractor__c</field>
        <field>No_of_Bathrooms__c</field>
        <field>Supplying_Distributor__c</field>
        <field>Expected_Date_of_Order__c</field>
        <field>Competitor_s_Info__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Spr_Status_as_Approved_TL</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>TL Approval Status</label>
        <name>update_order_status_as_Approved</name>
        <rejectionActions>
            <action>
                <name>update_order_status_as_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This Approval is for TL</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Account.Order_Status1__c</field>
            <operation>notEqual</operation>
            <value>Submitted,Approved,Approved by TL,Approved by Projects Head,Approved by Director</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Total_Order_Quantity__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Order_Max_Percentage__c</field>
            <operation>lessThan</operation>
            <value>3</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Order_status_rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_for_TL_Discount_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>update_order_status_as_submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval for BD record by TL</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
