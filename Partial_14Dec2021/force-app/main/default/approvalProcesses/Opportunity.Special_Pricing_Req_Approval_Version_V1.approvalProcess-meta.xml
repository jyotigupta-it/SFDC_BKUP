<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>General approvals</description>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>girish.shrivastava@ashirvad.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Avg Discount Approval &lt;6%</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Average_Discount__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Average_Discount__c</field>
                <operation>lessThan</operation>
                <value>6</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jayant.kumar@ashirvad.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Avg Discount Approval &gt;6% - Project head(Jayant Kumar).</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Average_Discount__c</field>
                <operation>greaterThan</operation>
                <value>6</value>
            </criteriaItems>
        </entryCriteria>
        <label>Step 3</label>
        <name>Step_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Ashirvad_Email_Template/Additional_Discount_Request_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Special_Pricing_Request_Approval__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Mail_to_Depots</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Approve_It</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>cc_Mail_to_Accounts</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_Notification_to_Owner_who_is_requested</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Spl_Pricing_Req_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Notification_to_Owner_who_is_requested_after_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Spl_Pricing_Req_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Depot_eMail_Id_Update_1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Depot_eMail_Id_Update_2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Special_Pricing_Req_Field</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Approved_by_Init</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Special Pricing Req Approval Version V1</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
