<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>OR(LEN(MOBILE_No__c )&lt;&gt; 10,NOT(ISNUMBER(MOBILE_No__c )))</errorConditionFormula>
    <errorDisplayField>MOBILE_No__c</errorDisplayField>
    <errorMessage>Enter 10 digit mobile number</errorMessage>
</ValidationRule>
