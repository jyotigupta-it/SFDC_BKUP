<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>start_date</fullName>
    <active>true</active>
    <errorConditionFormula>AND (
ISCHANGED(Start_date__c),
Start_date__c &lt;  TODAY()
)</errorConditionFormula>
    <errorDisplayField>Start_date__c</errorDisplayField>
    <errorMessage>Please enter a start date greater than or equal to today</errorMessage>
</ValidationRule>
