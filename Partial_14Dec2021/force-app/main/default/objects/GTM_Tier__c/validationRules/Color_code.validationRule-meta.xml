<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Color_code</fullName>
    <active>true</active>
    <description>Hexadecimal 6 digit color code</description>
    <errorConditionFormula>NOT(REGEX(Color__c, &quot;(#[A-Fa-f0-9]{6}|#[A-Fa-f0-9]{3})$&quot;))</errorConditionFormula>
    <errorDisplayField>Color__c</errorDisplayField>
    <errorMessage>Enter a valid hex colour code with #</errorMessage>
</ValidationRule>
