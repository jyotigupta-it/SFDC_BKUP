<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>OR (BEGINS(Mobile__c,&apos;0&apos;), BEGINS(Mobile__c,&apos;+91&apos;), LEN(Mobile__c) &lt;&gt; 10, NOT(REGEX(Mobile__c, &quot;[0-9]{10}&quot;)))</errorConditionFormula>
    <errorDisplayField>Mobile__c</errorDisplayField>
    <errorMessage>Do not start with &quot;Zero&quot; or &quot;+91&quot;. Don&apos;t give any blank space in between. Please enter only 10 digit mobile number.</errorMessage>
</ValidationRule>
